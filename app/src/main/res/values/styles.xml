<resources>

    <!-- Appointment Card -->
    <style name="AppointmentCardContainer">
        <item name="android:background">@drawable/card</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="AppointmentCardDoctorImage">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppointmentCardDoctorName">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/appointment_card_title</item>
    </style>

    <style name="AppointmentCardIcon">
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="AppointmentCardDate">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/appointment_card_text</item>
    </style>

    <style name="AppointmentCardTime">
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/appointment_card_text</item>
    </style>

    <style name="AppointmentCardAddress">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/appointment_card_text</item>
    </style>

</resources>
