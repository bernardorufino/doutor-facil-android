<resources>

    <!-- TODO: Extract dimensions -->

    <style name="DialogHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/search_parameter_header_color</item>
        <item name="android:background">@color/search_parameter_header_bg</item>
        <item name="android:padding">11dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Appointment Card -->

    <style name="AppointmentCardContainer">
        <item name="android:background">@drawable/card</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="AppointmentCardSpecialty">
        <item name="android:paddingRight">7.5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/professional_card_name_text</item>
        <item name="android:shadowColor">@color/professional_card_name_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/appointment_card_specialty_bg</item>
    </style>

    <style name="AppointmentCardDate">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/appointment_card_title</item>
    </style>

    <style name="AppointmentCardDescContainer">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">7.5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppointmentCardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppointmentCardButtonDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/appointment_card_button_divider</item>
    </style>

    <!-- ProfessionalCard -->

    <style name="ProfessionalCardContainer">
        <item name="android:background">@drawable/card</item>
        <item name="android:layout_margin">2.5dp</item>
    </style>

    <style name="ProfessionalCardName">
        <item name="android:paddingLeft">@dimen/professional_card_padding</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/professional_card_name_text</item>
        <item name="android:shadowColor">@color/professional_card_name_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:background">@drawable/professional_card_name_bg</item>
    </style>

    <style name="ProfessionalCardDescContainer">
        <item name="android:paddingBottom">7.5dp</item>
        <item name="android:paddingLeft">7.5dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="ProfessionalCardDescText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/professional_card_desc_text</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ProfessionalCardImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@color/professional_card_image_tint</item>
    </style>

    <style name="ProfessionalCardRatingShadowLayer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignBottom">@id/professional_card_image</item>
        <item name="android:background">@drawable/professional_card_rating_bg</item>
    </style>

    <style name="ProfessionalCardRatingView">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginRight">-5dp</item>
    </style>

    <!-- Search Parameter Container -->

    <style name="SearchParameterViewDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/search_parameter_divider</item>
    </style>

    <!-- Search Parameter -->

    <style name="SearchParameterValue">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/search_parameter_value_text</item>
    </style>

    <style name="SearchParameterIcon">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="SearchParamsButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/search_param_button_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="SearchParameterDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/search_parameter_buttons_border</item>
    </style>

    <!-- Tab -->

    <style name="TabIcon">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Main Bar -->

    <style name="MainBarLogo">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="MainBarDescription">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:textColor">@color/main_bar_description</item>
    </style>

    <!-- Profile -->

    <style name="ProfileScheduleItemText">
        <item name="android:textColor">@color/profile_schedule_date_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProfileScheduleItemSlot">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:background">#484848</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ProfileName" parent="ProfessionalCardName">
    </style>

    <style name="ProfileDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@color/profile_divider</item>
    </style>

    <style name="ProfileDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/profile_text</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="autoScaleTextView">
        <!-- use the next line to alter the minimum text size (uncomment first)-->
        <!-- <item name="@attr/minTextSize">10dp</item> -->
    </style>

</resources>
